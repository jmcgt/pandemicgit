@model Produto
<div class="container">
    <h2 style="padding-top: 20px;">Novo Produto</h2><hr/><br/>
    <form asp-controller="produto" asp-action="create" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label>Imagem:</label>
            <div class="add-photo-icon" onclick="_upload()">
                <i class="far fa-image"></i>
            </div>
            <input asp-for="Imagem" id="Imagem" type="file" class="hide-file-input" accept=".jpg,.png" id="upload">
            <span class="small text-danger" asp-validation-for="Imagem"></span>
        </div>
        <div class="form-group">
            <label for="nome">Título:</label>
            <input class="form-control" asp-for="Nome" placeholder="Digite título do produto">
            <span class="small text-danger" asp-validation-for="Nome"></span>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Valor:</label>
                    <input class="form-control text-center" type="text" asp-for="Valor" placeholder="Valor">
                    <span class="small text-danger" asp-validation-for="Valor"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tempo de preparo:</label>
                    <input class="form-control" type="time" asp-for="TempoPreparo" placeholder="Tempo">
                    <span class="small text-danger" asp-validation-for="TempoPreparo"></span>
                </div>
            </div>
        </div>               
        <div class="form-group">
            <label for="nome">Descrição:</label>
            <textarea class="form-control" asp-for="Descricao" placeholder="Digite a descrição do produto" maxlength="150" style="resize: none;">
            </textarea>
            <span class="small text-danger" asp-validation-for="Descricao"></span>
        </div>
        <button class="btn btn-primary">SALVAR</button>
        <a href="/dashboard" class="btn btn-default">VOLTAR</a>
    </form>
</div>
<script src="~/produto.js"></script>
<script src="~/jquery.mask.js"></script>
<script>
function _upload(){
    document.getElementById('Imagem').click();
}
</script>